{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node"]
  },
  "include": ["./*.ts", "./.vuepress/**/*.ts", "./.vuepress/**/*.vue"],
  "exclude": ["node_modules"]
}
